<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".act_review.activity_review_read_detail">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="50dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_rr_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_keyboard_backspace_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰 상세 보기"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nscrv_arrd"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="7dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_rr_profile_photo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_baseline_no_photography_24" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_rr_nickname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:minWidth="60dp"
                                    android:text="닉네임" />

                                <TextView
                                    android:id="@+id/tv_rr_follow"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@color/tema"
                                    android:gravity="center"
                                    android:minWidth="60dp"
                                    android:text="팔로우"
                                    android:textColor="@color/white"
                                    android:textStyle="normal" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_rr_review_date"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginStart="5dp"
                                android:gravity="center_vertical"
                                android:text="리뷰 작성 날짜" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_rr_plus_option"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_baseline_more_horiz_24"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_rr_review_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="리뷰 내용" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/vp_rr_review_image"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        tools:ignore="SpeakableTextPresentCheck" />


                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/cid_rr_review_image"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="4dp"
                        app:ci_drawable="@drawable/view_rrd_review_image_indicator"
                        app:ci_height="7dp"
                        app:ci_width="7dp" />

                    <LinearLayout
                        android:id="@+id/ll_rr_review_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_rr_book_cover"
                            android:layout_width="50dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_baseline_no_photography_24" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_rr_book_title"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:gravity="center_vertical"
                                android:text="책 제목"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_rr_book_author"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:gravity="center_vertical"
                                android:text="작가"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_top"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_arrd_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_arrd_recommendation_count"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="추천 개수"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/tv_arrd_reply_count"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="댓글 개수"
                                android:textSize="13dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_arrd_recommendation"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/btn_recommendation_btn_selector"
                                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcyv_arrd_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_arrd_re_reply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/very_light_tema"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_arrd_re_reply_status"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:padding="5dp"
                android:text="답글 표시"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_arrd_re_reply_cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_close_24_black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_arrd_reply_update"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@color/very_light_tema"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_arrd_reply_update_status"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:padding="5dp"
                android:text="답글 표시"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_arrd_reply_update_cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_close_24_black" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dp"
            app:cardBackgroundColor="@color/very_light_tema"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/etv_arrd_reply"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:hint="댓글을 입력해주세요."
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:maxHeight="84dp"
                    android:minHeight="50dp"
                    android:padding="5dp"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_arrd_reply"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/btn_reply_selector" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>